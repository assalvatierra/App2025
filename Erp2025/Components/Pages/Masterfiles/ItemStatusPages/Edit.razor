@page "/itemstatuses/edit"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>ItemStatus</h2>
<hr />
@if (ItemStatus is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="ItemStatus" OnValidSubmit="UpdateItemStatus" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="ItemStatus.Id" value="@ItemStatus.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="ItemStatus.Name" class="form-control" />
                    <ValidationMessage For="() => ItemStatus.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <InputText id="description" @bind-Value="ItemStatus.Description" class="form-control" />
                    <ValidationMessage For="() => ItemStatus.Description" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="remarks" class="form-label">Remarks:</label>
                    <InputText id="remarks" @bind-Value="ItemStatus.Remarks" class="form-control" />
                    <ValidationMessage For="() => ItemStatus.Remarks" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="code" class="form-label">Code:</label>
                    <InputText id="code" @bind-Value="ItemStatus.Code" class="form-control" />
                    <ValidationMessage For="() => ItemStatus.Code" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="sortorder" class="form-label">SortOrder:</label>
                    <InputNumber id="sortorder" @bind-Value="ItemStatus.SortOrder" class="form-control" />
                    <ValidationMessage For="() => ItemStatus.SortOrder" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="itemstatusclassid" class="form-label">ItemStatusClassId:</label>
                    <InputNumber id="itemstatusclassid" @bind-Value="ItemStatus.ItemStatusClassId" class="form-control" />
                    <ValidationMessage For="() => ItemStatus.ItemStatusClassId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/itemstatuses">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private ItemStatus? ItemStatus { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ItemStatus ??= await context.ItemStatus.FirstOrDefaultAsync(m => m.Id == Id);

        if (ItemStatus is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateItemStatus()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ItemStatus!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ItemStatusExists(ItemStatus!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/itemstatuses");
    }

    private bool ItemStatusExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.ItemStatus.Any(e => e.Id == id);
    }
}
