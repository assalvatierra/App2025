@page "/refcountries/delete"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>RefCountry</h2>
    <hr />
    @if (refcountry is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@refcountry.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@refcountry.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Remarks</dt>
            <dd class="col-sm-10">@refcountry.Remarks</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Code</dt>
            <dd class="col-sm-10">@refcountry.Code</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SortOrder</dt>
            <dd class="col-sm-10">@refcountry.SortOrder</dd>
        </dl>
        <EditForm method="post" Model="refcountry" OnValidSubmit="DeleteRefCountry" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(refcountry is null)">Delete</button> |
            <a href="/refcountries">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private RefCountry? refcountry;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        refcountry = await context.RefCountry.FirstOrDefaultAsync(m => m.Id == Id);

        if (refcountry is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteRefCountry()
    {
        using var context = DbFactory.CreateDbContext();
        context.RefCountry.Remove(refcountry!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/refcountries");
    }
}
