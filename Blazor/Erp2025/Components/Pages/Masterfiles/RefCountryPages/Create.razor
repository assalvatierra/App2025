@page "/refcountries/create"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>RefCountry</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="RefCountry" OnValidSubmit="AddRefCountry" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="RefCountry.Name" class="form-control" /> 
                <ValidationMessage For="() => RefCountry.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label> 
                <InputText id="description" @bind-Value="RefCountry.Description" class="form-control" /> 
                <ValidationMessage For="() => RefCountry.Description" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="remarks" class="form-label">Remarks:</label> 
                <InputText id="remarks" @bind-Value="RefCountry.Remarks" class="form-control" /> 
                <ValidationMessage For="() => RefCountry.Remarks" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="code" class="form-label">Code:</label> 
                <InputText id="code" @bind-Value="RefCountry.Code" class="form-control" /> 
                <ValidationMessage For="() => RefCountry.Code" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="sortorder" class="form-label">SortOrder:</label> 
                <InputNumber id="sortorder" @bind-Value="RefCountry.SortOrder" class="form-control" /> 
                <ValidationMessage For="() => RefCountry.SortOrder" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/refcountries">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private RefCountry RefCountry { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddRefCountry()
    {
        using var context = DbFactory.CreateDbContext();
        context.RefCountry.Add(RefCountry);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/refcountries");
    }
}
