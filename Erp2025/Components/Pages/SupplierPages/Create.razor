@page "/suppliers/create"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Supplier</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Supplier" OnValidSubmit="AddSupplier" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Supplier.Name" class="form-control" /> 
                <ValidationMessage For="() => Supplier.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="remarks" class="form-label">Remarks:</label> 
                <InputText id="remarks" @bind-Value="Supplier.Remarks" class="form-control" /> 
                <ValidationMessage For="() => Supplier.Remarks" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="contactno1" class="form-label">ContactNo1:</label> 
                <InputText id="contactno1" @bind-Value="Supplier.ContactNo1" class="form-control" /> 
                <ValidationMessage For="() => Supplier.ContactNo1" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="contactno2" class="form-label">ContactNo2:</label> 
                <InputText id="contactno2" @bind-Value="Supplier.ContactNo2" class="form-control" /> 
                <ValidationMessage For="() => Supplier.ContactNo2" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="address1" class="form-label">Address1:</label> 
                <InputText id="address1" @bind-Value="Supplier.Address1" class="form-control" /> 
                <ValidationMessage For="() => Supplier.Address1" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="address2" class="form-label">Address2:</label> 
                <InputText id="address2" @bind-Value="Supplier.Address2" class="form-control" /> 
                <ValidationMessage For="() => Supplier.Address2" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="email1" class="form-label">Email1:</label> 
                <InputText id="email1" @bind-Value="Supplier.Email1" class="form-control" /> 
                <ValidationMessage For="() => Supplier.Email1" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="email2" class="form-label">Email2:</label> 
                <InputText id="email2" @bind-Value="Supplier.Email2" class="form-control" /> 
                <ValidationMessage For="() => Supplier.Email2" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="cityid" class="form-label">CityId:</label> 
                <InputNumber id="cityid" @bind-Value="Supplier.CityId" class="form-control" /> 
                <ValidationMessage For="() => Supplier.CityId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="countryid" class="form-label">CountryId:</label> 
                <InputText id="countryid" @bind-Value="Supplier.CountryId" class="form-control" /> 
                <ValidationMessage For="() => Supplier.CountryId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="Supplier.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => Supplier.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdon" class="form-label">CreatedOn:</label> 
                <InputDate id="createdon" @bind-Value="Supplier.CreatedOn" class="form-control" /> 
                <ValidationMessage For="() => Supplier.CreatedOn" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="lasteditby" class="form-label">LastEditBy:</label> 
                <InputText id="lasteditby" @bind-Value="Supplier.LastEditBy" class="form-control" /> 
                <ValidationMessage For="() => Supplier.LastEditBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="lastediton" class="form-label">LastEditOn:</label> 
                <InputDate id="lastediton" @bind-Value="Supplier.LastEditOn" class="form-control" /> 
                <ValidationMessage For="() => Supplier.LastEditOn" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="isarchived" class="form-label">IsArchived:</label> 
                <InputCheckbox id="isarchived" @bind-Value="Supplier.IsArchived" class="form-check-input" /> 
                <ValidationMessage For="() => Supplier.IsArchived" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="isprivate" class="form-label">IsPrivate:</label> 
                <InputCheckbox id="isprivate" @bind-Value="Supplier.IsPrivate" class="form-check-input" /> 
                <ValidationMessage For="() => Supplier.IsPrivate" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="isactive" class="form-label">IsActive:</label> 
                <InputCheckbox id="isactive" @bind-Value="Supplier.IsActive" class="form-check-input" /> 
                <ValidationMessage For="() => Supplier.IsActive" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/suppliers">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Supplier Supplier { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddSupplier()
    {
        using var context = DbFactory.CreateDbContext();
        context.Supplier.Add(Supplier);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/suppliers");
    }
}
