@page "/itemtypes/edit"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>ItemType</h2>
<hr />
@if (ItemType is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="ItemType" OnValidSubmit="UpdateItemType" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="ItemType.Id" value="@ItemType.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="ItemType.Name" class="form-control" />
                    <ValidationMessage For="() => ItemType.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <InputText id="description" @bind-Value="ItemType.Description" class="form-control" />
                    <ValidationMessage For="() => ItemType.Description" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="remarks" class="form-label">Remarks:</label>
                    <InputText id="remarks" @bind-Value="ItemType.Remarks" class="form-control" />
                    <ValidationMessage For="() => ItemType.Remarks" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="code" class="form-label">Code:</label>
                    <InputText id="code" @bind-Value="ItemType.Code" class="form-control" />
                    <ValidationMessage For="() => ItemType.Code" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="sortorder" class="form-label">SortOrder:</label>
                    <InputNumber id="sortorder" @bind-Value="ItemType.SortOrder" class="form-control" />
                    <ValidationMessage For="() => ItemType.SortOrder" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="itemtypeclassid" class="form-label">ItemTypeClassId:</label>
                    <InputNumber id="itemtypeclassid" @bind-Value="ItemType.ItemTypeClassId" class="form-control" />
                    <ValidationMessage For="() => ItemType.ItemTypeClassId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/itemtypes">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private ItemType? ItemType { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ItemType ??= await context.ItemType.FirstOrDefaultAsync(m => m.Id == Id);

        if (ItemType is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateItemType()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ItemType!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ItemTypeExists(ItemType!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/itemtypes");
    }

    private bool ItemTypeExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.ItemType.Any(e => e.Id == id);
    }
}
