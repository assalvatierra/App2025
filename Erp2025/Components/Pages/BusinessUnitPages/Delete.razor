@page "/businessunits/delete"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>BusinessUnit</h2>
    <hr />
    @if (businessunit is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@businessunit.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@businessunit.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Remarks</dt>
            <dd class="col-sm-10">@businessunit.Remarks</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Code</dt>
            <dd class="col-sm-10">@businessunit.Code</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SortOrder</dt>
            <dd class="col-sm-10">@businessunit.SortOrder</dd>
        </dl>
        <EditForm method="post" Model="businessunit" OnValidSubmit="DeleteBusinessUnit" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(businessunit is null)">Delete</button> |
            <a href="/businessunits">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private BusinessUnit? businessunit;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        businessunit = await context.BusinessUnit.FirstOrDefaultAsync(m => m.Id == Id);

        if (businessunit is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBusinessUnit()
    {
        using var context = DbFactory.CreateDbContext();
        context.BusinessUnit.Remove(businessunit!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/businessunits");
    }
}
