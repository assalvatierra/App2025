@page "/itemstatuses/delete"
@using Microsoft.EntityFrameworkCore
@using Erp.Domain.Models
@inject IDbContextFactory<Erp2025.Data.Erp2025Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>ItemStatus</h2>
    <hr />
    @if (itemstatus is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@itemstatus.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@itemstatus.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Remarks</dt>
            <dd class="col-sm-10">@itemstatus.Remarks</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Code</dt>
            <dd class="col-sm-10">@itemstatus.Code</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SortOrder</dt>
            <dd class="col-sm-10">@itemstatus.SortOrder</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ItemStatusClassId</dt>
            <dd class="col-sm-10">@itemstatus.ItemStatusClassId</dd>
        </dl>
        <EditForm method="post" Model="itemstatus" OnValidSubmit="DeleteItemStatus" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(itemstatus is null)">Delete</button> |
            <a href="/itemstatuses">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private ItemStatus? itemstatus;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        itemstatus = await context.ItemStatus.FirstOrDefaultAsync(m => m.Id == Id);

        if (itemstatus is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteItemStatus()
    {
        using var context = DbFactory.CreateDbContext();
        context.ItemStatus.Remove(itemstatus!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/itemstatuses");
    }
}
